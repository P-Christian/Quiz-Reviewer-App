<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Dark_pink"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="QuizIT is a application specifically designed to test the knowledge of its user on Computer Peripherals."
        android:textSize="25dp"
        android:fontFamily="@font/retrogame"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Developers:"
        android:textSize="25dp"
        android:fontFamily="@font/retrogame"
        />

    <TextView
        android:id="@+id/creators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="50dp"
        android:text="Parayno Christian\n Coquia Angel\n Basa Jerome"
        android:textSize="25dp"
        android:fontFamily="@font/retrogame"
        android:textAlignment="center"
        />
</RelativeLayout>